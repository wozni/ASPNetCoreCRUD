@model Initial.Models.ConferenceEditModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-controller="Conferences" asp-action="Edit" method="post">
    
    <a asp-controller="Conferences" asp-action="Index" class="btn btn-info">Back</a>
    <button type="submit" class="btn btn-primary">Save</button>


    <h3>Details</h3>


    <ul class="list-group">
        <li class="list-group-item">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="conferenceName">Conference name</label>
                <div class="col-sm-10">
                    <input type="text" id="conferenceName" name="Name" value="@Model.Name" class="form-control"/>
                </div>
            </div>
        </li>
    </ul>

    <h3>Attendees</h3>

    <ul class="list-group">
        @for (int i = 0; i < Model.Attendees.Count; i++)
        {
            <li class="list-group-item">
                @Html.HiddenFor(m => m.Attendees[i].Id)
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Attendee First Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="Attendees[@i].FirstName" value="@Model.Attendees[i].FirstName" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Attendee Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="Attendees[@i].LastName" value="@Model.Attendees[i].LastName" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Attendee EMail</label>
                    <div class="col-sm-10">
                        <input type="text" name="Attendees[@i].Email" value="@Model.Attendees[i].EMail" class="form-control"/>
                    </div>
                </div>
            </li>
        }
        <li class="list-group-item">
        </li>
    </ul>

</form>
<h3>Register Attendee</h3>
    <ul class="list-group">
    <li class="list-group-item">
        <form method="post" asp-controller="Conferences" asp-action="RegisterAttendee">
        <input type="hidden" class="text-box single-line" name="conferenceName" value="@Model.Name"/>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Session:</label>
            <div class="col-sm-10">
                @Html.DropDownList("sessionId",
                    Model.Sessions.Select(s => new SelectListItem(s.Name, s.Id.ToString())),
                    new{ @class="form-control"})
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">First name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="firstName" value=""/>

            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="lastName" value=""/>

            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="email" value=""/>

            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
            </form>
    </li>
    </ul>

@model ConferenceCreateModel

@{
    Layout = "_Layout";
}

<a asp-controller="Conferences" asp-action="Index" class="btn btn-info">Back</a>


<h3>Create new conference</h3>
<form asp-controller="Conferences" asp-action="Create" method="post">
    <ul class="list-group">
        <li class="list-group-item">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="conferenceName">Conference name</label>
                <div class="col-sm-10">
                    <input type="text" id="conferenceName" name="Name" value="@Model.Name" class="form-control"/>
                </div>
            </div>
        </li>
    </ul>
    <button type="submit" class="btn btn-primary" style="margin: 10px 0 0 0">Create</button>
</form>
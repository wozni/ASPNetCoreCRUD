@model Initial.Models.ConferenceListModel[]

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<a asp-controller="Conferences" asp-action="Create">Create</a>
<ul>
@foreach (var conference in Model)
{
    <li>@conference.Name (Sessions: @conference.SessionCount, Attendees: @conference.AttendeeCount)
        <a asp-controller="Conferences" asp-action="Edit" asp-route-eventName="@conference.Name">Edit</a>
        <a asp-controller="Conferences" asp-action="Delete" asp-route-id="@conference.Id">Delete</a>
    </li>
}
</ul>